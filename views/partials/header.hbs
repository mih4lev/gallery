<header>
    <div class="wrapperFull">
        <div class="header">
            <div class="headerLogo">
                <a href="/" class="headerLogo--link">
                    <img class="headerLogo--image" src="/images/logo.svg" width="114" height="27" alt="Logo arTE">
                </a>
            </div>
            <nav class="headerNav">
                <ul class="headerNav--list">
                    {{#if isAdmin}}
                        <li class="headerNav--item headerNav--eye">
                            <button class="adminEye">show/hide admin layout</button>
                            <ul class="adminLayoutList">
                                <li class="adminLinkWrapper">
                                    <a class="adminLink langLayout"
                                       data-action="showLayout"
                                       href="#">
                                        Показать элементы
                                    </a>
                                </li>
                                <li class="adminLinkWrapper">
                                    <a class="adminLink langLayout"
                                       data-action="editOptions"
                                       data-page-link="{{{ pageLink }}}"
                                       href="#">
                                        Настройки страницы
                                    </a>
                                </li>
                                <li class="adminLinkWrapper">
                                    <a class="adminLink authorLayout"
                                       data-action="addAuthor"
                                       href="#">
                                        Добавить автора
                                    </a>
                                </li>
                                <li class="adminLinkWrapper">
                                    <a class="adminLink eventLayout"
                                       data-action="addEvent"
                                       href="#">
                                        Добавить новость
                                    </a>
                                </li>
                                <li class="adminLinkWrapper">
                                    <a class="adminLink pictureAddLayout"
                                       data-action="addPicture"
                                       href="#">
                                        Добавить картину
                                    </a>
                                </li>
                                <li class="adminLinkWrapper">
                                    <a class="adminLink"
                                       data-action="showOrders"
                                       href="/orders">
                                        Страница заказов
                                    </a>
                                </li>
                                {{#if isPainterActive}}
                                <li class="adminLinkWrapper">
                                    <a class="adminLink subLink authorEditLayout"
                                       data-action="editAuthor"
                                       data-author-id="{{{ authorData.authorID }}}"
                                       href="#">Редактировать автора</a>
                                </li>
                                <li class="adminLinkWrapper">
                                    <a class="adminLink subLink authorDeleteLayout"
                                       data-action="deleteAuthor"
                                       data-author-id="{{{ authorData.authorID }}}"
                                       href="#">Удалить автора</a>
                                </li>
                                {{/if}}
                                {{#if isArticleActive}}
                                    <li class="adminLinkWrapper">
                                        <a class="adminLink subLink eventEditLayout"
                                           data-action="editEvent"
                                           data-event-id="{{{ eventData.eventID }}}"
                                           href="#">Редактировать новость</a>
                                    </li>
                                    <li class="adminLinkWrapper">
                                        <a class="adminLink subLink eventDeleteLayout"
                                           data-action="deleteEvent"
                                           data-event-id="{{{ eventData.eventID }}}"
                                           href="#">Удалить новость</a>
                                    </li>
                                {{/if}}
                                {{#if isPictureActive}}
                                    <li class="adminLinkWrapper">
                                        <a class="adminLink subLink pictureEditLayout"
                                           data-action="editPicture"
                                           data-picture-id="{{{ pictureData.pictureID }}}"
                                           href="#">Редактировать картину</a>
                                    </li>
                                    <li class="adminLinkWrapper">
                                        <a class="adminLink subLink pictureDeleteLayout"
                                           data-action="deletePicture"
                                           data-picture-id="{{{ pictureData.pictureID }}}"
                                           href="#">Удалить картину</a>
                                    </li>
                                {{/if}}
                            </ul>
                        </li>
                    {{/if}}
                    {{#if isBasketActive}}

                    {{else}}
                    <li class="headerNav--item">
                        <a class="headerNav--link headerNav--basket" href="#">
                            <img src="/images/basket--icon.svg" width="18" height="19" alt="Basket">
                            <span class="basketCount"></span>
                        </a>
                        <div class="headerBasket">
                            <div class="headerBasket--empty">{{{ headerBasket--empty }}}</div>
                            <button class="headerBasket--closeButton" disabled></button>
                        </div>
                    </li>
                    {{/if}}
                    <li class="headerNav--item headerNav--language">
                        <span class="headerNav--link headerLanguage">{{{ languageTitle }}}</span>
                        <ul class="headerLanguage--list">
                            {{#if isActiveRU}}
                                <li class="headerLanguage--item">
                                    <a class="headerLanguage--link headerLanguage--active" data-language="ru-RU" href="#">RU</a>
                                </li>
                                <li class="headerLanguage--item">
                                    <a class="headerLanguage--link" data-language="en-EN" href="#">EN</a>
                                </li>
                            {{else}}
                                <li class="headerLanguage--item">
                                    <a class="headerLanguage--link headerLanguage--active" data-language="en-EN" href="#">EN</a>
                                </li>
                                <li class="headerLanguage--item">
                                    <a class="headerLanguage--link" data-language="ru-RU" href="#">RU</a>
                                </li>
                            {{/if}}
                        </ul>
                    </li>
                    <li class="headerNav--item mainNav">
                        <ul class="mainNavList">
                            <li class="headerNav--item">
                                {{#if isCollectionActive}}
                                    <span class="headerNav--active headerNav--collections">{{{ headerNav--collections }}}</span>
                                {{else}}
                                    <a class="headerNav--link headerNav--collections" href="/collection">{{{ headerNav--collections }}}</a>
                                {{/if}}
                            </li>
                            <li class="headerNav--item">
                                {{#if isAuthorsActive}}
                                    <span class="headerNav--active headerNav--authors">{{{ headerNav--authors }}}</span>
                                {{else}}
                                    <a class="headerNav--link headerNav--authors" href="/authors">{{{ headerNav--authors }}}</a>
                                {{/if}}
                            </li>
                            <li class="headerNav--item">
                                {{#if isEventsActive}}
                                    <span class="headerNav--active headerNav--artPlacement">{{{ headerNav--artPlacement }}}</span>
                                {{else}}
                                    <a class="headerNav--link headerNav--artPlacement" href="/events">{{{ headerNav--artPlacement }}}</a>
                                {{/if}}
                            </li>
                            <li class="headerNav--item">
                                {{#if isDeliveryActive}}
                                    <span class="headerNav--active headerNav--delivery">{{{ headerNav--delivery }}}</span>
                                {{else}}
                                    <a class="headerNav--link headerNav--delivery" href="/delivery">{{{ headerNav--delivery }}}</a>
                                {{/if}}
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</header>