<template class="authorEducationTemplate">
    <div class="editWrapper">
        <div class="templateLoader"></div>
        <form class="templateWrapper templateWrapper--hidden">
            <div class="templateLine templateLine3">
                <div class="templateElement">
                    <label class="templateLabel" for="educationYearRU">Год RU</label>
                    <input type="text"
                        class="templateField educationYearRU"
                        id="educationYearRU"
                        data-validate="yearRU"
                        name="educationYearRU">
                </div>
                <div class="templateElement">
                    <label class="templateLabel" for="educationYearEN">Год EN</label>
                    <input type="text"
                        class="templateField educationYearEN"
                        id="educationYearEN"
                        data-validate="yearEN"
                        name="educationYearEN">
                </div>
                <div class="templateElement">
                    <label class="templateLabel" for="educationPlace">Позиция</label>
                    <input type="text"
                        class="templateField educationPlace"
                        id="educationPlace"
                        data-validate="place"
                        name="educationPlace">
                </div>
            </div>
            <div class="templateElement">
                <label class="templateLabel" for="educationRU">Описание RU</label>
                <textarea
                    class="templateField educationRU"
                    id="educationRU"
                    data-required="true"
                    data-validate="langSymbolsRU"
                    name="educationRU"></textarea>
            </div>
            <div class="templateElement">
                <label class="templateLabel" for="educationEN">Описание EN</label>
                <textarea
                    class="templateField educationEN"
                    id="educationEN"
                    data-required="true"
                    data-validate="langSymbolsEN"
                    name="educationEN"></textarea>
            </div>
            <div class="templateButtons">
                <button
                    class="templateButton deleteButton"
                    type="submit">
                    Удалить
                </button>
                <button
                    class="templateButton mainButton"
                    type="submit">
                    Добавить
                </button>
            </div>
        </form>
        <button class="adminButton closeButton">Закрыть</button>
    </div>
</template>