<div class="innerPage">
    <div class="wrapperFull">
        <div class="collection">
            <div class="filtersWrapper">
                <div class="filtersHeader">Фильтры</div>
                <ul class="filters">
                    <li class="filter">
                        <p class="filterLabel filterPrice">Цена</p>
                        <div class="rangeWrapper">
                            <div class="rangeLine">
                                <button class="rangeMin">min</button>
                                <button class="rangeMax">max</button>
                                <span class="range"></span>
                            </div>
                            <div class="rangeLabels">
                                <span class="labelMin price price--rub" data-rub="5000">5 000</span>
                                <span class="labelMax price price--rub" data-rub="280000">280 000</span>
                            </div>
                        </div>
                    </li>
                    <li class="filter">
                        <p class="filterLabel filterOrientation">Ориентация</p>
                        <div class="orientationWrapper">
                            <button class="orientation orientation--width" data-select="width">Width more</button>
                            <button class="orientation orientation--height" data-select="height">Height more</button>
                            <button class="orientation orientation--both" data-select="both">Both are equal</button>
                        </div>
                    </li>
                    <li class="filter">
                        <p class="filterLabel filterSize">Размер</p>
                        <div class="rangeWrapper">
                            <p class="rangeHeader rangeWidth">Ширина</p>
                            <div class="rangeLine">
                                <button class="rangeMin">min</button>
                                <button class="rangeMax">max</button>
                                <span class="range"></span>
                            </div>
                            <div class="rangeLabels">
                                <span class="labelMin metric metric--ru" data-default="20">20</span>
                                <span class="labelMax metric metric--ru" data-default="250">250</span>
                            </div>
                        </div>
                        <div class="rangeWrapper">
                            <p class="rangeHeader rangeHeight">Высота</p>
                            <div class="rangeLine">
                                <button class="rangeMin">min</button>
                                <button class="rangeMax">max</button>
                                <span class="range"></span>
                            </div>
                            <div class="rangeLabels">
                                <span class="labelMin metric metric--ru" data-default="20">20</span>
                                <span class="labelMax metric metric--ru" data-default="250">250</span>
                            </div>
                        </div>
                    </li>
                    <li class="filter">
                        <p class="filterLabel filterColor">Цвет</p>
                        <div class="colorsWrapper">
                            <button class="color" data-select="dark-violet">Dark violet</button>
                            <button class="color" data-select="soft-magenta">Soft magenta</button>
                            <button class="color" data-select="mostly-desaturated-dark-orange">Mostly desaturated dark orange</button>
                            <button class="color" data-select="very-dark-green">Very dark green</button>
                            <button class="color" data-select="dark-cyan">Dark cyan</button>
                            <button class="color" data-select="very-soft-blue">Very soft blue</button>
                            <button class="color" data-select="dark-blue">Dark blue</button>
                            <button class="color" data-select="very-dark-pink">Very dark pink</button>
                            <button class="color" data-select="dark-red">Dark red</button>
                            <button class="color" data-select="vivid-orange">Vivid orange</button>
                            <button class="color" data-select="bright-yellow">Bright yellow</button>
                            <button class="color" data-select="dark-grayish-blue">Dark grayish blue</button>
                            <button class="color" data-select="very-light-gray">Very light gray</button>
                            <button class="color" data-select="very-dark-blue">Very dark (mostly black) blue</button>
                        </div>
                    </li>
                    <li class="filter">
                        <p class="filterLabel filterLabel--dropdown filterGenre">Жанр</p>
                        <div class="dropdown">
                            <div class="dropdownWrapper">
                                <ul class="dropdownList">
                                    <li class="dropdownItem" data-select="1">
                                        <span class="dropdownLink">Портрет</span>
                                    </li>
                                    <li class="dropdownItem" data-select="2">
                                        <span class="dropdownLink">Пейзаж</span>
                                    </li>
                                    <li class="dropdownItem" data-select="3">
                                        <span class="dropdownLink">Абстракция</span>
                                    </li>
                                </ul>
                            </div>
                            <div class="dropdownScroll"></div>
                        </div>
                        <ul class="chosenList"></ul>
                    </li>
                    <li class="filter">
                        <p class="filterLabel filterLabel--dropdown filterTechnique">Техника</p>
                        <div class="dropdown">
                            <div class="dropdownWrapper">
                                <ul class="dropdownList">
                                    <li class="dropdownItem" data-select="1">
                                        <span class="dropdownLink">Масла</span>
                                    </li>
                                    <li class="dropdownItem" data-select="2">
                                        <span class="dropdownLink">Коллаж</span>
                                    </li>
                                    <li class="dropdownItem" data-select="3">
                                        <span class="dropdownLink">Акрил</span>
                                    </li>
                                    <li class="dropdownItem" data-select="4">
                                        <span class="dropdownLink">Пастель</span>
                                    </li>
                                    <li class="dropdownItem" data-select="5">
                                        <span class="dropdownLink">Маркер</span>
                                    </li>
                                    <li class="dropdownItem" data-select="6">
                                        <span class="dropdownLink">Акварель</span>
                                    </li>
                                </ul>
                            </div>
                            <div class="dropdownScroll"></div>
                        </div>
                        <ul class="chosenList"></ul>
                    </li>
                    <li class="filter">
                        <p class="filterLabel filterLabel--dropdown filterAuthor">Автор</p>
                        <div class="dropdown">
                            <div class="dropdownWrapper">
                                <ul class="dropdownList">
                                    <li class="dropdownItem" data-select="1">
                                        <img class="authorPhoto" src="/images/author1_photo.png" alt="author 1 photo">
                                        <span class="dropdownLink">Катерина Жуковская</span>
                                    </li>
                                    <li class="dropdownItem" data-select="2">
                                        <img class="authorPhoto" src="/images/author2_photo.png" alt="author 2 photo">
                                        <span class="dropdownLink">Марина Лебедева</span>
                                    </li>
                                    <li class="dropdownItem" data-select="3">
                                        <img class="authorPhoto" src="/images/author3_photo.png" alt="author 3 photo">
                                        <span class="dropdownLink">Sasha Ignatiadou</span>
                                    </li>
                                    <li class="dropdownItem" data-select="4">
                                        <img class="authorPhoto" src="/images/author1_photo.png" alt="author 1 photo">
                                        <span class="dropdownLink">Валентина Нарыжная</span>
                                    </li>
                                    <li class="dropdownItem" data-select="5">
                                        <img class="authorPhoto" src="/images/author2_photo.png" alt="author 2 photo">
                                        <span class="dropdownLink">Оля Пахомова</span>
                                    </li>
                                    <li class="dropdownItem" data-select="6">
                                        <img class="authorPhoto" src="/images/author3_photo.png" alt="author 3 photo">
                                        <span class="dropdownLink">Дмитрий Маликов</span>
                                    </li>
                                    <li class="dropdownItem" data-select="7">
                                        <img class="authorPhoto" src="/images/author1_photo.png" alt="author 1 photo">
                                        <span class="dropdownLink">Анастасия Иванова</span>
                                    </li>
                                    <li class="dropdownItem" data-author="8">
                                        <img class="authorPhoto" src="/images/author2_photo.png" alt="author 2 photo">
                                        <span class="dropdownLink">Оля Кулевина</span>
                                    </li>
                                    <li class="dropdownItem" data-select="9">
                                        <img class="authorPhoto" src="/images/author3_photo.png" alt="author 3 photo">
                                        <span class="dropdownLink">Антон Антонов</span>
                                    </li>
                                    <li class="dropdownItem" data-select="10">
                                        <img class="authorPhoto" src="/images/author1_photo.png" alt="author 1 photo">
                                        <span class="dropdownLink">Светлана Светлакова</span>
                                    </li>
                                    <li class="dropdownItem" data-select="11">
                                        <img class="authorPhoto" src="/images/author2_photo.png" alt="author 2 photo">
                                        <span class="dropdownLink">Марина Левобережная</span>
                                    </li>
                                    <li class="dropdownItem" data-select="12">
                                        <img class="authorPhoto" src="/images/author3_photo.png" alt="author 3 photo">
                                        <span class="dropdownLink">Аркадий Новиков</span>
                                    </li>
                                    <li class="dropdownItem" data-select="13">
                                        <img class="authorPhoto" src="/images/author1_photo.png" alt="author 1 photo">
                                        <span class="dropdownLink">Артем Безволосый</span>
                                    </li>
                                    <li class="dropdownItem" data-select="14">
                                        <img class="authorPhoto" src="/images/author2_photo.png" alt="author 2 photo">
                                        <span class="dropdownLink">Екатерина Смирнова</span>
                                    </li>
                                    <li class="dropdownItem" data-select="15">
                                        <img class="authorPhoto" src="/images/author3_photo.png" alt="author 3 photo">
                                        <span class="dropdownLink">Вика Красильникова</span>
                                    </li>
                                </ul>
                            </div>
                            <div class="dropdownScroll"></div>
                        </div>
                        <ul class="chosenList"></ul>
                    </li>
                </ul>
            </div>
            {{> picture-list }}
        </div>
    </div>
</div>