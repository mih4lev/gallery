<div class="innerPage">
    <div class="pictureWrapper">
        <div class="wrapper">
            <ul class="breadcrumbs">
                <li class="breadcrumb">
                    <a class="breadcrumbLink headerNav--collections" href="/collection">{{{ headerNav--collections }}}</a>
                </li>
                <li class="breadcrumb">
                    <span class="breadcrumbLink--active">{{{ pictureData.picture }}}</span>
                </li>
            </ul>
            <div class="picture">
                <div class="picturePhotoWrapper">
                    {{# if pictureData.mainPicture.hasPhoto }}
                        <img class="picturePhoto"
                             src="/photos/pictures/original/{{{ pictureData.mainPicture.photoLink }}}_preview.jpg"
                             alt="{{{ pictureData.picture }}}">
                    {{/if}}
                </div>
                <div class="pictureDataWrapper">
                    <h1 class="pictureHeader pictureHeaderID" data-picture-id="{{{ pictureData.pictureID }}}">{{{ pictureData.picture }}}</h1>
                    <div class="pictureAuthorWrapper">
                        <a class="pictureAuthor pictureAuthorData" href="/authors/{{{ pictureData.authorID }}}">{{{ pictureData.author }}}</a>
                    </div>
                    {{# if isActiveRU }}
                        <em class="picturePrice price price--rub" data-rub="{{{ pictureData.picturePrice }}}">{{{ pictureData.langPrice }}}</em>
                    {{/if}}
                    {{# if isActiveEN }}
                        <em class="picturePrice price price--euro" data-rub="{{{ pictureData.picturePrice }}}">{{{ pictureData.langPrice }}}</em>
                    {{/if}}
                    <p class="pictureSize">
                        <span class="sizeLabel">{{{ sizeLabel }}}</span>
                        <span class="pictureWidth metric metric--{{{ language }}}">{{{ pictureData.pictureSizeWidth }}}</span>
                        <span class="pictureHeight metric metric--{{{ language }}}">{{{ pictureData.pictureSizeHeight }}}</span>
                    </p>
                    <p class="pictureGenre">
                        <span class="genreLabel">{{{ genreLabel }}}</span>
                        <span class="genreName">
                            {{# each pictureData.genres }}
                                <em class="genreTitle">{{{ genre }}}</em>
                            {{/each}}
                        </span>
                    </p>
                    <p class="pictureTechnique">
                        <span class="techniqueLabel">{{{ techniqueLabel }}}</span>
                        <span class="techniqueName">
                            {{# each pictureData.techniques }}
                                <em class="techniqueTitle">{{{ technique }}}</em>
                            {{/each}}
                        </span>
                    </p>
                    <ul class="pictureSimilarList">
                        {{# each pictureData.photos }}
                            {{# if hasPhoto }}
                            <li class="pictureSimilar">
                                <picture class="interestPhoto similarPhoto"
                                         data-picture="/photos/pictures/original/{{{ photoLink }}}_preview.jpg"
                                         data-orignial="/photos/pictures/original/{{{ photoLink }}}.jpg">
                                    <source srcset="/photos/pictures/thumbs/{{{ photoLink }}}_56x56.webp" type="image/webp">
                                    <img
                                         src="/photos/pictures/thumbs/{{{ photoLink }}}_56x56.png"
                                         alt="{{{ picture }}}">
                                </picture>
                                {{#if isAdmin}}
                                    <button class="deletePhoto" data-photo-id="{{{ photoID }}}">X</button>
                                {{/if}}
                            </li>
                            {{/if}}
                        {{/each}}
                        {{#if isAdmin}}
                            <li class="pictureSimilar downloadSimilarPhoto">
                                <input type="file"
                                       class="picturePhoto downloadPhoto"
                                       data-options="picture"
                                       data-value="{{{ pictureData.pictureID }}}">
                            </li>
                        {{/if}}
                    </ul>
                    <p class="pictureDeliveryText">{{{ pictureDeliveryText }}}</p>
                    <button class="cartButton"
                            data-picture-id="{{{ pictureData.pictureID }}}">
                        {{{ cartButton }}}
                    </button>
                </div>
            </div>
            <p class="pictureText">{{{ pictureData.pictureAbout }}}</p>
            <div class="authorWrapper">
                <div class="authorHeaderWrapper">
                    <img class="authorPhoto"
                         src="/photos/authors/thumbs/{{{ pictureData.authorPhoto }}}_55x55.png"
                         alt="{{{ pictureData.author }}}">
                    <p class="authorHeaderAnother">{{{ authorHeaderAnother }}}</p>
                </div>
                {{#if anotherPictures.length }}
                <ul class="authorList">
                    {{#each anotherPictures}}
                    <li class="authorPicture">
                        <a class="authorPictureLink" href="/collection/{{{ pictureID }}}">
                            {{#if hasPhoto }}
                            <img class="authorPicturePhoto"
                                 src="/photos/pictures/thumbs/{{{ photoLink }}}_194x194.png"
                                 alt="{{{ picture }}}">
                            {{else}}
                                <div class="authorPicturePhoto defaultPhoto"></div>
                            {{/if}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
                <div class="buttonWrapper">
                    <a class="picturesButton" href="/authors/{{{ authorID }}}">{{{ picturesButton }}}</a>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<template class="pictureGallery">
    <div class="galleryWrapper">

    </div>
</template>